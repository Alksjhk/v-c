{
  "name": "chat-server",
  "version": "1.1.0",
  "description": "聊天系统后端服务 - 支持合并部署",
  "main": "dist/app.js",
  "scripts": {
    "dev": "bun --watch src/app.ts",
    "build": "bun build src/app.ts --outdir ./dist --target node",
    "build:vercel": "bun run build && cd clinet && bun run build",
    "start": "bun dist/app.js",
    "reset-db": "bun run src/scripts/reset-database.ts",
    "vercel-build": "bun run build:vercel"
  },
  "dependencies": {
    "@vercel/blob": "^0.23.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "multer": "^2.0.2",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.20",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.8.0",
    "@types/pg": "^8.16.0",
    "typescript": "^5.2.2"
  }
}

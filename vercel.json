{
  "version": 2,
  "buildCommand": "bun run build:vercel",
  "outputDirectory": "dist",
  "builds": [
    {
      "src": "dist/app.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/dist/app.js"
    },
    {
      "src": "/uploads/(.*)",
      "dest": "/dist/app.js"
    },
    {
      "src": "/health",
      "dest": "/dist/app.js"
    },
    {
      "src": "/sse/(.*)",
      "dest": "/dist/app.js"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/app.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
